<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/91ca5c5bd0.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

 <body>
  <header class="navbar navbar-fixed-top ">
    <div class="container-fluid">
    　<nav class="navbar-nav mr-auto">
        <%= link_to 'Bookers', root_path, class:"header-title" %>
      </nav>
      <nav>
       <ul class="nav navbar-nav navbar-right">
      　 <% if user_signed_in? %>
     　　　<div class="d-flex flex-row bd-highlight mb4">
     　　　　 <li>
       　     <%= link_to 'Home', user_path(current_user), class:"fas fa-home" %>
           </li>
           <li>
             <%= link_to 'Users', users_path, class:"fas fa-users" %>
           </li>
           <li>
             <%= link_to 'Books', books_path, class:"fas fa-book-open" %>
           </li>
           <li>
             <%= link_to "logout", destroy_user_session_path, class:"fas fa-sign-out-alt", method: :delete %>
           </li>
          </div>
         <% else %>
       <div class="d-flex flex-row bd-highlight mb-4">
           <li>
             <%= link_to 'Home', root_path, class:"fas fa-home" %>
           </li>
           <li>
             <%= link_to 'About', home_about_path, class:"fas fa-link" %>
           </li>
           <li>
             <%= link_to "sign up", new_user_registration_path, class:"fas fa-user-plus" %>
           </li>
           <li>
             <%= link_to "login", new_user_session_path, class:"fas fa-sign-in-alt" %>
           </li>
           </div>
         <% end %>
         </ul>
         </nav>
         </div>
         </header>
         <div class="container">
        <%= yield %>
        <footer>
          <p class="text-center">CopyRight Infratop.inc</p>
        </footer>
     </div>
  </body>
</html>


